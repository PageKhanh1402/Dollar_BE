@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Dashboard Content -->
<div class="container-fluid">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1" id="greeting">Welcome to the Dashboard!</h4>
                        <p class="text-muted">
                            Manage your system easily and efficiently. Start exploring now!
                        </p>
                    </div>
                    <a href="#" class="btn btn-primary">Discover Features</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tips or Updates Carousel -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5>Tips & Updates</h5>
                </div>
                <div class="card-body">
                    <div id="tipsCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success rounded-circle p-2 me-3">
                                        <i class="ti ti-bulb"></i>
                                    </span>
                                    <div>
                                        <h6 class="mb-1">Tip: Customize Dashboard</h6>
                                        <p class="text-muted mb-0">Add or remove widgets to suit your needs!</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info rounded-circle p-2 me-3">
                                        <i class="ti ti-bell"></i>
                                    </span>
                                    <div>
                                        <h6 class="mb-1">New Update</h6>
                                        <p class="text-muted mb-0">Version 2.1 released with an improved UI!</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-warning rounded-circle p-2 me-3">
                                        <i class="ti ti-star"></i>
                                    </span>
                                    <div>
                                        <h6 class="mb-1">Tip: Quick Reports</h6>
                                        <p class="text-muted mb-0">Use automated reports to save time!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#tipsCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#tipsCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistic Cards Placeholder -->
    @* <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-circle bg-primary me-3">
                        <i class="ti ti-users text-white"></i>
                    </div>
                    <div>
                        <h6 class="m-0">Users</h6>
                        <h4 class="mt-1 mb-0">Loading...</h4>
                    </div>
                </div>
            </div>
        </div>
    </div> *@
</div>

@section Scripts {
    <script>
        // Dynamic greeting based on time of day
        document.addEventListener("DOMContentLoaded", function () {
            const greetingElement = document.getElementById("greeting");
            const currentHour = new Date().getHours();
            let greeting = "Welcome to the Dashboard!";

            if (currentHour < 12) {
                greeting = "Good Morning! Ready to manage your system?";
            } else if (currentHour < 18) {
                greeting = "Good Afternoon! Let's keep things rolling!";
            } else {
                greeting = "Good Evening! Check today's progress!";
            }

            greetingElement.textContent = greeting;
        });
    </script>
}