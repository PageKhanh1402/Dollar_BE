@model DollarProject.ViewModels.LoginViewModel

<div class="login-modal bg-gray-800 rounded-lg p-6 w-[300px] sm:w-[400px] relative shadow-lg">
    <button id="closeLogin" class="close-modal-btn absolute top-2 right-2 text-gray-300 hover:text-white text-2xl font-bold">×</button>
    <h2 class="text-2xl font-bold mb-4 text-center text-white">Sign In</h2>

    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Login" asp-controller="Auth" method="post" id="loginForm">
        <input type="hidden" name="ReturnUrl" value="@Context.Request.Path" />
        <div class="mb-4">
            <label for="Email" class="block text-sm mb-1 text-gray-300">Email</label>
            <input asp-for="Email" class="w-full border border-gray-600 bg-gray-700 text-white px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-orange-500" placeholder="Enter your email" required>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label for="Password" class="block text-sm mb-1 text-gray-300">Password</label>
            <input asp-for="Password" type="password" class="w-full border border-gray-600 bg-gray-700 text-white px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-orange-500" placeholder="Enter your password" required>
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>
        <div class="flex items-center justify-between text-sm mb-4 text-gray-300">
            <label class="flex items-center gap-2">
                <input asp-for="RememberMe" class="form-checkbox text-orange-500">
                <span>Remember me</span>
            </label>
            <a href="#" class="text-orange-500 hover:underline">Forgot Password?</a>
        </div>
        <button type="submit" class="submit-btn w-full text-white py-2 rounded bg-orange-500 hover:bg-orange-600">Sign In</button>
    </form>
    <div class="mt-4 text-center">
        <a href="/Auth/ExternalLogin?provider=Google&returnUrl=@Context.Request.Path" class="inline-flex items-center justify-center w-full text-white py-2 rounded bg-blue-600 hover:bg-blue-700">
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
                <path fill="#ffffff" d="M12 0C5.372 0 0 5.373 0 12s5.372 12 12 12 12-5.373 12-12S18.628 0 12 0zm0 2c5.514 0 10 4.486 10 10s-4.486 10-10 10S2 17.514 2 12 6.486 2 12 2zm-.234 6.766a3.534 3.534 0 00-3.533 3.533c0 .45.09.883.247 1.286l-3.12 1.168a5.764 5.764 0 00-1.347-1.286c-1.95-1.45-3.013-3.766-2.68-6.316.333-2.55 2.183-4.683 4.683-5.516a5.767 5.767 0 016.066 1.083l-1.316 1.316a3.534 3.534 0 00-3.99-1.268z" />
            </svg>
            Sign in with Google
        </a>
    </div>
    <p class="text-sm text-center mt-4 text-gray-300">Don't have an account? <a href="#" class="text-orange-500 hover:underline">Create one</a></p>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}