@model DollarProject.Models.Product
@{
    var categories = ViewData["Categories"] as List<DollarProject.Models.ProductCategory>;
}



<div class="max-h-[90vh] overflow-y-auto custom-scroll bg-b-neutral-3 rounded-xl p-6 sm:p-8 shadow-lg w-full">
    <h2 class="text-2xl text-white font-semibold mb-6 text-center">🛒 Post a New Product</h2>

    <form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="grid grid-cols-1 gap-5">

            <!-- Product Name -->
            <div>
                <label class="block text-sm text-gray-300 mb-1">Product Name</label>
                <input name="ProductName" class="w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-600 focus:ring-2 focus:ring-orange-500" placeholder="Enter product name" required />
            </div>

            <!-- Product Type -->
            <div>
                <label class="block text-sm text-gray-300 mb-1">Product Type</label>
                <select name="ProductType" class="w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-600">
                    <option value="GameAccount">Game Account</option>
                    <option value="GameItem">Game Item</option>
                </select>
            </div>

            <!-- Category -->
            <div>
                <label class="block text-sm text-gray-300 mb-1">Category</label>
                @if (categories != null && categories.Any())
                {
                    <select name="CategoryID" class="w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-600">
                        @foreach (var cat in categories)
                        {
                            <option value="@cat.CategoryID">@cat.CategoryName</option>
                        }
                    </select>
                }
                else
                {
                    <select disabled class="w-full px-4 py-2 bg-gray-800 text-red-400 border border-gray-600 rounded-lg">
                        <option>No categories available</option>
                    </select>
                }
            </div>

            <!-- Price -->
            <div>
                <label class="block text-sm text-gray-300 mb-1">Price (Xu)</label>
                <input name="PriceXu" type="number" min="0" class="w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-600" required />
            </div>

            <!-- Stock -->
            <div>
                <label class="block text-sm text-gray-300 mb-1">Stock Quantity</label>
                <input name="Stock" type="number" min="1" class="w-full px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-600" required />
            </div>

            <!-- Description -->
            <div>
                <label class="form-label">Description</label>
                <div class="form-details-grid">
                    <input name="GameName" placeholder="Game Name" class="form-input" />
                    <input name="Level" placeholder="Level" class="form-input" />
                    <input name="Skins" placeholder="Skins/Items" class="form-input" />
                </div>
            </div>

            <!-- Account Information -->
            <div>
                <label class="form-label">Account Information</label>
                <textarea name="AccountInfomation" class="form-input textarea-input" placeholder="Input information of your account with email/phonenumber & password.." required></textarea>
            </div>

            <!-- Image -->
            <div>
                <label class="block text-sm text-gray-300 mb-1">Product Image</label>
                <input type="file" name="ImageFile" class="w-full text-white bg-gray-800 border border-gray-600 rounded-lg px-3 py-2" />
            </div>
        </div>

        <div class="flex justify-end mt-6">
            <button type="submit" class="px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition font-semibold">
                Post Product
            </button>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/product-form.css" rel="stylesheet" />
}
