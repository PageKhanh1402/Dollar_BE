@model DollarProject.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-12">
    <div class="container mx-auto px-4">

        <!-- Cover Image -->
        <div class="relative rounded-xl overflow-hidden mb-8">
            <img class="w-full h-64 object-cover" src="/images/profileCover2.png" alt="cover">
            <label for="coverPhoto" class="absolute top-4 right-4 cursor-pointer">
                <span class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-700 text-white">
                    <i class="ti ti-camera"></i>
                </span>
            </label>
            <input type="file" id="coverPhoto" name="CoverPhoto" class="hidden" />
        </div>

        <!-- Avatar -->
        <div class="flex justify-center -mt-16 mb-8">
            <div class="relative">
                <img class="rounded-full w-28 h-28 border-4 border-white shadow" src="/images/@(Model.ImageURL ?? "user33.png")" alt="profile">
                <label for="profilePhoto" class="absolute bottom-0 left-1/2 transform -translate-x-1/2 cursor-pointer">
                    <span class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-500 text-white">
                        <i class="ti ti-camera"></i>
                    </span>
                </label>
                <input type="file" id="profilePhoto" name="ProfilePhoto" class="hidden" />
            </div>
        </div>

        <!-- Profile Form -->
        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow p-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">General Information</h2>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                        <input asp-for="FirstName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                        <input asp-for="LastName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input asp-for="Email" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700">Phone</label>
                        <input asp-for="PhoneNumber" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700">Address</label>
                        <input asp-for="Address" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="SellerDescription" class="block text-sm font-medium text-gray-700">About Me</label>
                        <textarea asp-for="SellerDescription" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm h-32"></textarea>
                        <span asp-validation-for="SellerDescription" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="mt-6 flex justify-end">
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
