@model DollarProject.Models.SellerStore
@{
    ViewData["Title"] = "Register Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-pt overflow-visible">
    <div class="container">
        <div class="max-w-3xl mx-auto bg-b-neutral-2\/20 rounded-xl p-8 shadow">
            <h2 class="text-w-neutral-1 text-3xl font-semibold mb-6">Register Your Store</h2>

            <form asp-action="RegisterSeller" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label class="block text-w-neutral-1 mb-1">Store Name</label>
                        <input asp-for="StoreName" class="box-input-3 w-full bg-b-neutral-4 text-white" placeholder="e.g. Dragon Shop" />
                        <span asp-validation-for="StoreName" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label class="block text-w-neutral-1 mb-1">Store Description</label>
                        <textarea asp-for="Description" class="box-input-3 w-full bg-b-neutral-4 text-white h-[100px]" placeholder="Short description about your store..."></textarea>
                        <span asp-validation-for="Description" class="text-red-400 text-sm"></span>
                    </div>

                    <div>
                        <label class="block text-w-neutral-1 mb-1">Upload Logo</label>
                        <input type="file" name="LogoFile" class="form-control text-white" accept="image/*" />
                    </div>

                    <div>
                        <label class="block text-w-neutral-1 mb-1">Upload Banner</label>
                        <input type="file" name="BannerFile" class="form-control text-white" accept="image/*" />
                    </div>
                </div>

                <div class="flex justify-end mt-6">
                    <button type="submit" class="btn btn-md btn-primary rounded-12">Register Store</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
